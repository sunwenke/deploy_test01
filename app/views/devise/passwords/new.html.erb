<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
    <h2><sapn class="fa fa-share"></sapn> 忘记密码？</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :label => false, placeholder: '请输入邮箱地址', error: '请输入邮箱地址', required: true, autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "找回密码",class: "button" %>
      </div>
    <% end %>
    <hr />
    <div class="account">
      <%= link_to "已有帐号，立即登录", new_session_path(resource_name) %><br />
      <%= link_to "没有帐号，立即注册", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
</div>
