<div class="col-md-12">
  <div class="topic">
    <%= link_to("New topic", new_topic_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <td>#</td>
        <td>公告标题</td>
        <td>内容</td>
      </tr>
    </thead>
    <tbody>
      <% @topics.each do |topic| %>
        <tr>
          <td>#</td>
          <td><%= link_to(topic.title, topic_path(topic)) %></td>
          <td><%= link_to(topic.description, topic_path(topic)) %></td>
          <td>
              <!-- <%= link_to("Edit", edit_topic_path(topic), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", topic_path(topic),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%> -->
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
